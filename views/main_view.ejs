<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>todoNext</title>

    <!-- Responsive design -->
    <meta name="viewport" content="user-scalable=no, width=device-width, height=device-height, initial-scale=1.0">
    <!-- Resources -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,400" rel="stylesheet">
    <link href="/styles/main_view.css" rel="stylesheet" type="text/css"/>

  </head>


  <body>

    <!-- app containers -->
    <div id="todonext_app">
      <div id="page_background">

        <!-- top bar -->
        <div id="top_bar">
          <div id="top_bar_inner" class="global_left_margin">
            <div id="top_bar_spIcon">
              <div class="top_bar_btn_container">
                <img class="top_bar_btn" id="top_bar_menu_icon" src="/assets/btn_topbar_menuicon.svg">
              </div>
            </div>
            <div id="top_bar_logo"><img src="/assets/logo_todoNext.png"></div>
            <div id="top_bar_rightBtns">
              <div class="top_bar_btn_container"><img class="top_bar_btn" src="/assets/btn_topbar_add.svg"></div>
              <div class="top_bar_btn_container"><img class="top_bar_btn" src="/assets/btn_topbar_stats.svg"></div>
              <div class="top_bar_btn_container"><img class="top_bar_btn" src="/assets/btn_topbar_user.svg"></div>
            </div>
            <div id="top_bar_center">14 de nov. de 2018</div>
          </div>
        </div>

        <!-- app -->
        <div id="app_holder">

          <!-- left menu -->
          <div id="left_menu">
              <button type="button" class="btnTEst" id="formBtn">Add item</button><br><br>
              <form><input type="text" name="item" id="inputBox" placeholder="Add new item..." class="taskName" required></form>
          </div>

          <!-- content -->
          <div id="content">

            <div id="editor">

            <!-- list -->
            <ol id="mainList">
              <% for(var i=0; i< todos.length; i++){ %>
                <li><%= todos[i].item%></li>
              <% } %>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <!-- resources -->
    <script src="/scripts/slip.js"></script>
    <script src="/scripts/jquery-3.3.1.js"></script>
    <script src="/controllers/c_todolist_events.js"></script>

  </body>
</html>
